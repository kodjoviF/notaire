{% extends 'base.html' %}

{% block title %}Actualités{% endblock %}

{% block content %}
  <h1>Actualités</h1>
  <p>Ceci est la page d'actualités de la Chambre des Notaires du Togo.</p>

  <div class="row">
    {% for actualite in actualites %}
      <div class="col-md-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">{{ actualite.titre }}</h5>
            <p class="card-text">{{ actualite.date }}</p>
            <a href="#" class="btn btn-primary">En savoir plus</a>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>

  <!-- Ajoutez ici vos fichiers CSS personnalisés -->
  <link href="{% static 'css/actualites.css' %}" rel="stylesheet">
{% endblock %}

{% block extra_js %}
  <script>
    // Ajoutez ici votre code JavaScript personnalisé
  </script>
  <!-- Ajoutez ici vos fichiers JavaScript personnalisés -->
  <script src="{% static 'js/actualites.js' %}"></script>
{% endblock %}